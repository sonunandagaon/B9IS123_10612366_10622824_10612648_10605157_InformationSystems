<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MusicEquipmentStore</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="~/css/style.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/MusicEquipmentStore.styles.css" asp-append-version="true" />
</head>
<body>
    <header class="fixed-top">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand nav-logo" asp-area="" asp-controller="Home" asp-action="Index">Sans Music Store</a><span class="material-symbols-outlined piano">
                    piano
                </span>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-end navbar-nav-align">
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="#" >Contact</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="#">Blog</a>
                        </li>
                    </ul>
                </div>
                @if (User.Identity.IsAuthenticated)
                {
                    <div class="navbar float-right">
                        <span class="p-2">Welcome</span><span class="text-success font-weight-bold p-2">@User.Identity.Name.ToUpper()</span><a class="btn btn-sm btn-danger"
                                                                                                                                               asp-action="Logout" asp-controller="Home">SignOut</a>
                    </div>
                }
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    @*Footer*@

    <footer class="pro-footer">
        <div class="container pro-container">
            <div class="pro-row">
                <div class="pro-footer-col">
                    <h4>company</h4>
                    <ul class="pro-ul">
                        <li>
                            <a href="#">about us</a>
                            <a href="#">our services</a>
                            <a href="#">privacy policy</a>
                            <a href="#">contact us</a>
                        </li>
                    </ul>
                </div>
                <div class="pro-footer-col">
                    <h4>get help</h4>
                    <ul class="pro-ul">
                        <li>
                            <a href="#">FAQ</a>
                            <a href="#">shipping</a>
                            <a href="#">returns</a>
                            <a href="#">order status</a>
                            <a href="#">payment options</a>
                        </li>
                    </ul>
                </div>
                <div class="pro-footer-col">
                    <h4>Online shop</h4>
                    <ul class="pro-ul">
                        <li>
                            <a href="#">Sign In</a>
                            <a href="#">View Cart</a>
                            <a href="#">My Wishlist</a>
                            <a href="#">Help</a>
                        </li>
                    </ul>
                </div>
                <div class="pro-footer-col">
                    <h4>follow us</h4>
                    <div class="social-links">
                        <a href="#"> <i class="fa fa-facebook-official"></i></a>
                        <a href="#"><i class="fa fa-twitter"></i></a>
                        <a href="#"><i class="fa fa-instagram"></i></a>
                        <a href="#"><i class="fa fa-pinterest"></i></a>
                        <a href="#"><i class="fa fa-youtube"></i></a>
                    </div>
                </div>
                @*&copy; 2022 - MusicEquipmentStore - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>*@
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
