@model MusicEquipmentStore.Models.ViewModel.LoginViewModel
@{
    Layout = null;
}

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/site.js?v=4q1jwFhaPaZgr8WAUSrux6hAuh0XDg9kPS3xIVq36I0"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
    <script type="text/javascript" src="js/script.js"></script>
</head>

<html>
<body style="background: #aac7d4; font-family: 'Roboto', sans-serif;">
    <div class="container">
        <div class="row mt-lg-5">
            <div class="col-4 offset-4 border rounded p-lg-5 pr-5 pb-5">
                <div class="text-center">
                </div>
                <form method="post" asp-action="Login">
                    <div class="form-group mt-2">
                        <label asp-for="Username" class="mb-1"></label>
                        <input type="text" asp-for="Username" placeholder="Enter UserName" class="form-control" />
                        <span class="text-danger">@TempData["errorUserName"]</span>
                    </div>
                    <div class="form-group mt-2">
                        <label asp-for="Password" class="mb-1"></label>
                        <input id="password" type="password" asp-for="Password" placeholder="Enter Password" class="form-control" />
                        <span class="text-danger">@TempData["errorPassword"]</span>
                        <i id="open" class="fa fa-eye" style="margin-top: -25px; margin-right: 6px; cursor: pointer; float:right"></i>
                        <i id="closed" class="fa fa-eye-slash" style="margin-top: -25px; cursor: pointer; margin-right: 6px; display: none; float:right"></i>
                    </div>
                    <div class="form-group mt-lg-2">
                        <input type="checkbox" asp-for="IsRemember" />
                        <label asp-for="IsRemember"></label>
                    </div>
                    <div class="form-group mt-2">
                        <input type="submit" class="btn btn-block btn-primary mb-2" value="Log In" />
                    </div>
                </form>
                <div class="text-center">
                    <a class="text-primary" href="#">Forgot Username?</a>
                    <a class="text-primary" href="#">Forgot Password?</a>
                </div>
            </div>



        </div>
    </div>
</body>

<script>

    $(document).ready(function () {
        $("#open").click(function () {
            $("#open").hide(); $("#closed").show(); $("#password").attr("type", "text");
        });
        $("#closed").click(function () {
            $("#closed").hide(); $("#open").show();
            $("#password").attr("type", "password");
        });
    });

</script>
</html>


@section scripts{
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
    <script type="text/javascript" src="js/script.js"></script>
}

